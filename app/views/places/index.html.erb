
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'sl3-2.jpg', :class => ' img-responsive' %>

        <div class="carousel-caption">
          <h3>The best Pizza Places in Rome</h3>
        </div>

    </div>


    <div class="item">
      <%= image_tag 'sl1.jpg', :class => 'img-responsive' %>

      <div class="carousel-caption">
        <h3>Underground and Hidden Pizza Secrets</h3>
      </div>
    </div>


    <div class="item">
      <%= image_tag 'sl4-2.jpg', :class => 'img-responsive' %>

        <div class="carousel-caption">
          <h3>The Best Pizza - nothing else</h3>
        </div>
    </div>




  </div>


  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
<br />
<h1 class="text-center">Underground Pizza Places in Rome</h1>
<br />

<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h2><%= link_to place.name, place_path(place) %></h2>
    <i><%= place.address %></i><br /><br />

    <p><%= place.description %></p>


    <% if place.comments.present? %>
      <br />
      <blockquote>
        <%= place.comments.last.message %>
        <br />
        <small><%= place.comments.last.user.email %></small>
      </blockquote>
    <% end %>

  </div>

<% end %>
<br />
